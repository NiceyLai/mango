.wrapper {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-image: linear-gradient(to bottom, #5d33be 0%, #8f4cd7 100%);
}

.wrapper > header {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 66px;
  color: #D4D4EE;
}

.wrapper > main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.wrapper > footer {
  flex-shrink: 0;
}
